@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #wp-content {
        display: flex;
        width: 100%;
    }

    #content {
        flex: 2;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 20px;
        margin: 20px;
    }

    #sidebar {
        flex: 0.3;
        background: #f9f9f9;
        border: 1px solid #d6d6d6;
        border-radius: 8px;
        padding: 10px;
        margin: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        #sidebar h4 {
            font-size: 16px;
            margin-bottom: 15px;
            color: #555;
            text-align: center;
        }

        #sidebar .menu-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            margin-bottom: 15px;
            background: #007bff;
            color: #fff;
            border-radius: 50%;
            text-decoration: none;
            font-size: 20px;
            transition: background 0.3s, transform 0.3s;
        }

            #sidebar .menu-icon:hover {
                background: #0056b3;
                transform: scale(1.1);
            }

            #sidebar .menu-icon i {
                font-size: 22px;
            }
</style>

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <h2 class="text-uppercase">Chi tiết phiếu khảo sát</h2>
            <div id="wp-content">
                <!-- Sidebar -->
                <div id="sidebar">
                    <h4>Chức năng</h4>
                    <a href="#" class="menu-icon" title="Xem báo cáo">
                        <i class="fas fa-chart-bar"></i>
                    </a>
                    <a href="#" class="menu-icon" title="Chỉnh sửa phiếu">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="#" class="menu-icon" title="Xóa phiếu">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a href="#" class="menu-icon" title="Quay lại danh sách">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
                <!-- Nội dung chính -->
                <div id="content">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">First</th>
                                    <th scope="col">Last</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>mdo</td>
                                </tr>
                                <tr>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>fat</td>
                                </tr>
                                <tr>
                                    <td colspan="2">Larry the Bird</td>
                                    <td>twitter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

