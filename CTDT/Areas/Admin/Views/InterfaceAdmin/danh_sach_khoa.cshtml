@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Quản Lý Danh Sách Khoa</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh Sách Khoa</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h2 class="text-uppercase">Quản lý danh sách khoa/viện</h2>
            <hr />
            <fieldset class="border rounded-3 p-3">
                <legend class="float-none w-auto px-3">Chức năng</legend>
                <div class="mb-3 mt-3">
                    <button class="btn btn-primary btn-tone m-r-5" id="btnAdd" data-toggle="modal" data-target="#bd-example-modal-lg">Thêm mới</button>
                </div>
            </fieldset>
            <hr />
            <!--Modal-->
            <div class="modal fade" id="bd-example-modal-lg">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title h4"></h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body" id="body-content">
                            <!--dataa-->
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal-->
            <div class="m-t-25">
                <div class="table-responsive">
                    <table class="table table-bordered" id="khoaTable">
                        <!--data-->
                        <thead></thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptsAdmin{
    <script src="~/Areas/Admin/Scripts/ChucNangNguoiDung/Khoa.js"></script>
}
