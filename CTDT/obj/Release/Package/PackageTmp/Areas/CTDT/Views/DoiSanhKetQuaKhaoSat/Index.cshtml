@{
    ViewBag.Title = "Đối sánh kết quả khảo sát - TDMU";
    Layout = "~/Areas/CTDT/Views/Shared/_CTDTLayout.cshtml";
}

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Theo phiếu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Theo năm học</a>
                </li>

            </ul>
            <div class="tab-content m-t-15" id="myTabContent">
                <div class="tab-pane fade" id="home" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="page-header no-gutters">
                        <div class="col-lg-12">
                            <div class="mb-4 p-4 rounded shadow-sm" style="border: 1px solid #9caab9; background-color: #fcfcfc;">
                                <p class="text-center font-weight-bold" style="font-size: 25px; color: black;">ĐỐI SÁNH KẾT QUẢ KHẢO SÁT THEO NĂM HỌC</p>
                                <div id="comparison-rows">
                                    <div class="row items-push mb-3">
                                        <div class="col-5">
                                            <label class="form-label font-weight-bold" style="font-size: 16px; color: #333;">Năm học</label>
                                            <select class="form-control select2" id="year">
                                                
                                            </select>
                                        </div>
                                        <div class="col-5">
                                            <label class="form-label font-weight-bold" style="font-size: 16px; color: #333;">Phiếu khảo sát</label>
                                            <select class="form-control select2" id="surveybyyear">
                                               
                                            </select>
                                        </div>
                                        <div class="col-2 text-center">
                                            <button type="button" class="btn btn-danger btn-sm btn-delete-row mt-4">Xóa</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 text-left">
                                        <button type="button" id="AddRow" name="btnFilter" class="btn btn-primary btn-tone m-r-5">Thêm mới hàng so sánh</button>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <button class="btn btn-primary m-r-5" data-toggle="modal" data-target="#bd-example-modal-lg">So sánh</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="home-tab">
                    <div class="page-header no-gutters">
                        <div class="col-lg-12">
                            <div class="mb-4 p-4 rounded shadow-sm" style="border: 1px solid #9caab9; background-color: #fcfcfc;">
                                <p class="text-center font-weight-bold" style="font-size: 25px; color: black;">ĐỐI SÁNH KẾT QUẢ KHẢO SÁT THEO PHIẾU</p>
                                <div id="comparison-rows">
                                    <div class="row items-push mb-3">
                                        <div class="col-5">
                                            <label class="form-label font-weight-bold" style="font-size: 16px; color: #333;">Phiếu khảo sát</label>
                                            <select class="form-control select2" id="surveyid">
                                                @foreach (var items in ViewBag.Survey)
                                                {
                                                    <option value="@items.Value">@items.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-5">
                                            <label class="form-label font-weight-bold" style="font-size: 16px; color: #333;">Năm học</label>
                                            <div id="yearCheckboxes" class="checkbox">
                                                <!-- Checkboxes will be dynamically inserted here -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <button class="btn btn-primary m-r-5" data-toggle="modal" data-target="#bd-example-modal-lg">So sánh</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="m-t-25" id="showalldata">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead style="color:black; text-align:center; font-weight:bold">
                            <tr>
                                <th scope="col">Năm học</th>
                                <th scope="col">Số lượng tham gia khảo sát</th>
                                <th scope="col">Số lượng sinh viên</th>
                                <th scope="col">Tỷ lệ tham khảo sát</th>
                                <th scope="col">Điểm TB</th>
                                <th scope="col">Mức độ hài lòng</th>
                            </tr>
                        </thead>
                        <tbody id="showdata">
                            <tr>
                                <td>2023-2024</td>
                                <td>5</td>
                                <td>5</td>
                                <td>80</td>
                                <td>4.1</td>
                                <td>81</td>
                            </tr>
                            <tr>
                                <td>2024-2025</td>
                                <td>5</td>
                                <td>5</td>
                                <td>80</td>
                                <td>4.1</td>
                                <td>81</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scriptsCTDT {
    <script src="~/Areas/CTDT/Scripts/DoiSanhKetQuaKhaoSat.js"></script>
}
