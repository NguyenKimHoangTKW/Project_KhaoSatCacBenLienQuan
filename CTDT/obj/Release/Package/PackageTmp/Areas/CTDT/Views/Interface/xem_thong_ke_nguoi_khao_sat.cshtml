@{
    Layout = "~/Areas/CTDT/Views/Shared/_CTDTLayout.cshtml";
}

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Chi tiết thống kê</a>
                </li>
            </ul>
            <div class="tab-content m-t-15" id="myTabContent">
                <p id="surveyid" hidden>@ViewBag.id</p>
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="home-tab">
                    <div class="page-header no-gutters">
                        <h2 class="text-uppercase">Xem chi tiết thống kê khảo sát</h2>
                        <hr />
                        <fieldset class="border rounded-3 p-3">
                            <legend class="float-none w-auto px-3">Chức năng</legend>
                            <!-- Export to Excel Button -->
                            <button id="exportExcel" style="display:none" class="btn btn-success m-r-5">Xuất Excel</button>

                            <button class="btn btn-danger m-r-5" onclick="window.location.href='/ctdt/giam-sat-ty-le-tham-gia-khao-sat'">Quay trở lại</button>
                        </fieldset>
                    </div>
                    <div class="m-t-25">
                        <h4 id="title-survey"></h4>
                        <div class="table-responsive">
                            <!-- The table will be populated here dynamically -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

@section scriptsCTDT{
    <script src="~/Areas/CTDT/Scripts/XemChiTietThongKeKhaoSat.js"></script>
}
