@{
    ViewBag.Title = "Thống kê tần xuất câu hỏi - TDMU";
    Layout = "~/Areas/CTDT/Views/Shared/_CTDTLayout.cshtml";
}
<div class="main-content">
    <div class="card">
        <div class="card-body">
            <div class="page-header no-gutters">
                <div class="col-lg-12">
                    <h2 class="text-uppercase">giám sát kết quả khảo sát thuộc chương trình đào tạo</h2>
                    <hr />
                    <fieldset class="border rounded-3 p-3">
                        <legend class="float-none w-auto px-3">Chức năng</legend>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Chọn năm</label>
                                <select class="form-control select2" id="yearGiamSat">
                                    @foreach (var item in ViewBag.Year)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Chọn chương trình đào tạo</label>
                                <select class="form-control select2" id="find-ctdt">
                                    @foreach (var item in ViewBag.CTDT)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" id="btnFilter" class="btn btn-primary btn-tone" style="margin-right: 20px;">
                                <i class="fas fa-filter"></i> Lọc dữ liệu
                            </button>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="container mt-4" id="showchart">
                <div class="row">
                    <div class="col text-center">
                        <h3 class="mt-4">
                            <span>Giám sát toàn bộ phiếu khảo sát trong năm học</span>
                        </h3>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-4" style="height: 325px;">
                        <canvas class="chart" id="bar-chart" style="height: 300px;"></canvas>
                        <div class="d-flex justify-content-center">
                            <a href="#" onclick="window.location.href='/ctdt/giam-sat-ty-le-tham-gia-khao-sat'" class="link-info text-center">Xem chi tiết</a>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4" style="height: 325px;">
                        <canvas class="chart" id="line-chart" style="height: 300px;"></canvas>
                        <div class="d-flex justify-content-center">
                            <a href="#" onclick="window.location.href='/ctdt/ket-qua-khao-sat'" class="link-info text-center">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>

            <div id="error">

            </div>
        </div>


    </div>

</div>

@section scriptsCTDT {
    <script src="~/Areas/CTDT/Scripts/GiamSatKeuQuaKhaoSat.js"></script>
}
