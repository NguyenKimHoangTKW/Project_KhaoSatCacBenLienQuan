@{
    ViewBag.Title = "Danh sách chương trình đào tạo - TDMU";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh sách chương trình đào tạo</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách CTĐT</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="page-header no-gutters">
                <div class="col-lg-12">
                    <div class="mb-4" style="border: 1px solid #9caab9; padding: 15px; border-radius: 8px; background-color: #fcfcfc;">
                        <p style="font-weight:bold;font-size:25px;text-align:center;color:black">DANH SÁCH CHƯƠNG TRÌNH ĐÀO TẠO - SAU ĐẠI HỌC</p>
                        <div class="row items-push">
                            <div class="col-3">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Tìm theo Hệ đào tạo</label>
                                <select class="form-control select2" id="FilterHDT">
                                    <option value="">Tất cả</option>
                                    @foreach (var item in ViewBag.HDT)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-3">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Tìm theo khoa</label>
                                <select class="form-control select2" id="FilterKhoa">
                                    <option value="">Tất cả</option>
                                    @foreach (var item in ViewBag.KhoaList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-3">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Tìm theo chương trình đào tạo</label>
                                <select class="form-control select2" id="FiterCTDT">
                                    <option value="">Tất cả</option>
                                    @foreach (var item in ViewBag.CTDTList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-4">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Tìm theo từ khóa</label>
                                <input type="text" class="form-control" name="keywordSearch" id="searchInput" placeholder="Nhập từ khóa muốn tìm kiếm ...">
                            </div>

                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="text-left">
                                    <button type="submit" id="btnFilter" name="btnFilter" class="btn btn-primary btn-tone m-r-5">Tìm kiếm</button>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="text-right">
                                    <button class="btn btn-primary m-r-5" data-toggle="modal" data-target="#bd-example-modal-lg">Thêm mới</button>
                                    <button class="btn btn-success m-r-5" data-toggle="modal" data-target="#importExcelModal">Import từ Excel</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Modal Import Excel -->
            <div class="modal fade" id="importExcelModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Import CTĐT từ Excel</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="importExcelForm" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="excelFile">Chọn file Excel</label>
                                    <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xlsx, .xls">
                                </div>
                                <button type="submit" class="btn btn-success btn-tone m-r-5">Upload</button>
                                <a href="~/DataExport/Mau/MauUploadCBVC.xlsx" download>
                                    <button type="button" class="btn btn-info btn-tone m-r-5">Tải file mẫu</button>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Modal Import Excel -->
            <!--Modal Thêm mới CTDT-->
            <div class="modal fade" id="bd-example-modal-lg">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title h4">Thêm mới CTĐT</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="form-validation" method="post" action="/CTDT/Add">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Mã CTĐT *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="ma_ctdt" placeholder="Nhập tên mã CTĐT ... *">
                                    </div>
                                    <label class="col-sm-2 col-form-label control-label">Tên CTĐT *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="ten_ctdt" id="ten_ctdt" placeholder="Nhập tên CTĐT ... *">
                                    </div>
                                    <label class="col-sm-2 col-form-label control-label" style="margin-top: 10px;">Chọn Khoa *</label>
                                    <div class="col-sm-10" style="margin-top: 10px;">
                                        <select id="MaKhoa" name="id_khoa" class="form-control select2">
                                            <option value="">-- Chọn Khoa --</option>
                                            @foreach (var item in ViewBag.KhoaList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="col-sm-2 col-form-label control-label" style="margin-top: 10px;">Chọn Hệ đào tạo *</label>
                                    <div class="col-sm-10" style="margin-top: 10px;">
                                        <select id="MaHDT" name="id_khoa" class="form-control select2">
                                            <option value="">-- Chọn HĐT --</option>
                                            @foreach (var item in ViewBag.HDT)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger btn-tone m-r-5" data-dismiss="modal">Thoát</button>
                                <button type="button" class="btn btn-success btn-tone m-r-5" id="btnSave">Lưu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal Thêm mới CTDT-->
            <!-- Modal Sửa CTDT -->
            <div class="modal fade" id="ModalEditCTDT">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title h4">Sửa đổi CTDT</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="form-validation" method="post" action="/CTDT/Edit">
                                <input type="hidden" id="Edit_MaCTDT" name="Edit_MaCTDT" />
                                <input type="hidden" id="change_Ngay_Tao" name="change_Ngay_Tao" />
                                <input type="hidden" id="change_Ngay_Cap_Nhat" name="change_Ngay_Cap_Nhat" />
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Tên CTĐT *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Edit_TenCTDT" name="Edit_TenCTDT">
                                    </div>
                                    <label class="col-sm-2 col-form-label control-label" style="margin-top: 10px;">Chọn Khoa *</label>
                                    <div class="col-sm-10" style="margin-top: 10px;">
                                        <select id="Edit_Ma_Khoa" name="Edit_Ma_Khoa" class="form-control select2">
                                            @foreach (var item in ViewBag.KhoaList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="col-sm-2 col-form-label control-label" style="margin-top: 10px;">Chọn HĐT *</label>
                                    <div class="col-sm-10" style="margin-top: 10px;">
                                        <select id="Edit_HDT" class="form-control select2">
                                            @foreach (var item in ViewBag.HDT)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger btn-tone m-r-5" data-dismiss="modal">Thoát</button>
                                <button type="button" class="btn btn-success btn-tone m-r-5" id="btnSaveChange">Thay đổi</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal Sửa CTDT -->
            <div class="m-t-25">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">ID CTĐT</th>
                                <th scope="col">Mã CTĐT</th>
                                <th scope="col">Tên Khoa/Viện</th>
                                <th scope="col">Tên CTĐT</th>
                                <th scope="col">Hệ đào tạo</th>
                                <th scope="col">Ngày Cập Nhật</th>
                                <th scope="col">Ngày Tạo</th>
                                <th scope="col">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody id="showdata">
                            <!--Showdata-->
                        </tbody>
                    </table>
                </div>
                <div id="pagination" class="m-t-15 pagination-right">
                    <!-- Pagination buttons will be inserted here -->
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptsAdmin{
    <script>
        $('.select2').select2();
    var currentPage = 1;
    var totalPages = 0;
    $(document).ready(function () {
        LoadData(currentPage);
        $(document).on("click", "#btnSave", function () {
            AddCTDT();
        });
        $("#btnFilter").click(function(){
            var Search = $("#searchInput").val().toLowerCase();
            var filterctdt = $("#FiterCTDT").val();
            var filterkhoa = $("#FilterKhoa").val();
            var filterhdt = $("#FilterHDT").val();
            LoadData(currentPage, filterkhoa, filterctdt, filterhdt,Search);
        });
        $(document).on("click", "#btnEdit", function () {
            var MaCTDT = $(this).closest("tr").find("td:eq(1)").text().substring(1);
            GetByID(MaCTDT);
        });

        $(document).on("click", "#btnSaveChange", function () {
            EditCTDT();
        });

        $(document).on("click", "#btnDelete", function () {
            var MaCTDT = $(this).closest("tr").find("td:eq(1)").text().substring(1);
            var TenCTDT = $(this).closest("tr").find("td:eq(3)").text();
            if (confirm("Bạn có chắc muốn xóa khoa '" + TenCTDT + "' không?")) {
                DelCTDT(MaCTDT);
            }
        });

        $(document).on("click", ".page-link", function () {
            var page = $(this).data("page");
            if (page > 0 && page <= totalPages) {
                currentPage = page;
                var Search = $("#searchInput").val().toLowerCase();
                var filterctdt = $("#FiterCTDT").val();
                var filterkhoa = $("#FilterKhoa").val();
                var filterhdt = $("#FilterHDT").val();
                LoadData(currentPage, filterkhoa, filterctdt, filterhdt, Search);
            }
        });

        $('#importExcelForm').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            Swal.fire({
                title: 'Đang nhập dữ liệu...',
                html: 'Vui lòng chờ.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            $.ajax({
                url: '/Admin/CTDT/UploadExcel',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    Swal.close();

                    if (response.status.includes('Thêm người dùng thành công')) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công',
                            text: response.status,
                        }).then(() => {
                            $('#importExcelModal').modal('hide');
                            LoadData(currentPage);
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: response.status,
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.close();
                    Swal.fire({
                        icon: 'error',
                        title: 'Đã xảy ra lỗi',
                        text: 'Đã xảy ra lỗi: ' + error,
                    });
                }
            });
        });
    });

    function GetByID(id) {
        $.ajax({
            url: '/Admin/CTDT/GetByID',
            type: 'GET',
            data: { id: id },
            success: function (res) {
                $('#Edit_MaCTDT').val(res.data.MaCTDT);
                $('#Edit_TenCTDT').val(res.data.TenCTDT);
                $('#Edit_Ma_Khoa').val(res.data.MaKhoa);
                $('#change_Ngay_Tao').val(res.data.NgayTao);
                $('#change_Ngay_Cap_Nhat').val(res.data.NgayCapNhat);
            }
        });
    }

    function LoadData(pageNumber, filkhoa = 0, filctdt = 0 ,filhdt = 0,keyword = "") {
        $.ajax({
            url: '/Admin/CTDT/LoadDataCTDT',
            type: 'GET',
            data: { pageNumber: pageNumber,
                pageSize: 10,
                filkhoa : filkhoa,
                filctdt: filctdt,
                filhdt: filhdt,
                keyword: keyword },
            success: function (res) {
                var items = res.data;
                totalPages = res.totalPages;
                var html = "";

                if (items.length === 0) {
                    html += "<tr><td colspan='9' class='text-center'>Không có dữ liệu</td></tr>";
                } else {
                    for (let i = 0; i < items.length; i++) {
                        var formattedDate1 = unixTimestampToDate(items[i].NgayCapNhat);
                        var formattedDate2 = unixTimestampToDate(items[i].NgayTao);
                        var index = (pageNumber - 1) * 10 + i + 1;
                        html += "<tr>";
                        html += "<td>" + index + "</td>"
                        html += "<td>" + "#" + items[i].IDCTDT + "</td>";
                        html += "<td>" + items[i].MaCTDT + "</td>";
                        html += "<td>" + items[i].TenKhoa + "</td>";
                        html += "<td>" + items[i].TenCTDT + "</td>";
                        html += "<td>" + items[i].TenHDT + "</td>";
                        html += "<td>" + formattedDate1 + "</td>";
                        html += "<td>" + formattedDate2 + "</td>";
                        html += "<td><button class='btn btn-icon btn-hover btn-sm btn-rounded pull-right ' id='btnEdit' data-toggle='modal' data-target='#ModalEditCTDT'> <i class='anticon anticon-edit'></i></button><button class='btn btn-icon btn-hover btn-sm btn-rounded pull-right' id='btnDelete' > <i class='anticon anticon-delete'></i></button> </td> ";
                        html += "</tr>";
                    }
                }
                $('#showdata').html(html);
                renderPagination(pageNumber, totalPages);
            },
            error: function () {
                var html = "<tr><td colspan='9' class='text-center'>Không thể tải dữ liệu</td></tr>";
                $('#showdata').html(html);
            }
        });
    };

    function renderPagination(currentPage, totalPages) {
        var html = '<nav aria-label="Page navigation example"><ul class="pagination justify-content-end">';

        var startPage = currentPage - 2;
        var endPage = currentPage + 2;

        if (startPage < 1) {
            startPage = 1;
            endPage = 5;
        }

        if (endPage > totalPages) {
            endPage = totalPages;
            startPage = totalPages - 4;
        }

        if (startPage < 1) {
            startPage = 1;
        }

        html += '<li class="page-item ' + (currentPage == 1 ? 'disabled' : '') + '"><a class="page-link" href="#" data-page="' + (currentPage - 1) + '">Trước</a></li>';

        for (var i = startPage; i <= endPage; i++) {
            html += '<li class="page-item ' + (currentPage == i ? 'active' : '') + '"><a class="page-link" href="#" data-page="' + i + '">' + i + '</a></li>';
        }

        html += '<li class="page-item ' + (currentPage == totalPages ? 'disabled' : '') + '"><a class="page-link" href="#" data-page="' + (currentPage + 1) + '">Tiếp</a></li>';
        html += '</ul></nav>';

        $('#pagination').html(html);
    }

    function AddCTDT() {
        var ten_ctdt = $("#ten_ctdt").val().trim();
        var MaKhoa = $("#MaKhoa").val().trim();
        $.ajax({
            url: '/Admin/CTDT/Add',
            type: 'POST',
            dataType: 'JSON',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                ten_ctdt: ten_ctdt,
                id_khoa: MaKhoa
            }),
            success: function (response) {
                alert(response.status);
                LoadData(currentPage);
            },
            error: function (response) {
                alert(response.status)
            },
        });
    };

    function EditCTDT() {
        var TenCTDT = $('#Edit_TenCTDT').val();
        var MaCTDT = $('#Edit_MaCTDT').val()
        var MaKhoa = $('#Edit_Ma_Khoa').val();
        var NgayTao = $('#change_Ngay_Tao').val();
        var NgayCapNhat = $('#change_Ngay_Cap_Nhat').val();
        var ctdt = {
            id_ctdt: MaCTDT,
            ten_ctdt: TenCTDT,
            id_khoa: MaKhoa,
            ngaycapnhat: NgayCapNhat,
            ngaytao: NgayTao,
        };

        $.ajax({
            type: 'POST',
            url: '/Admin/CTDT/Edit',
            dataType: 'JSON',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(ctdt),
            success: function (response) {
                alert(response.status);
                LoadData(currentPage);
            }
        });
    };

    function DelCTDT(id) {
        $.ajax({
            type: 'POST',
            url: '/Admin/CTDT/Delete',
            data: { id: id },
            success: function (response) {
                alert(response.status);
                LoadData(currentPage);
            },
            error: function (response) {
                alert(response.status)
            },
        });
    };
    function debounce(func, delay) {
        let timeoutId;
        return function () {
            const context = this;
            const args = arguments;
            clearTimeout(timeoutId);
            timeoutId = setTimeout(() => func.apply(context, args), delay);
        };
    }
    function unixTimestampToDate(unixTimestamp) {
        var date = new Date(unixTimestamp * 1000);
        var weekdays = ['Chủ Nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'];
        var dayOfWeek = weekdays[date.getDay()];
        var month = ("0" + (date.getMonth() + 1)).slice(-2);
        var day = ("0" + date.getDate()).slice(-2);
        var year = date.getFullYear();
        var hours = ("0" + date.getHours()).slice(-2);
        var minutes = ("0" + date.getMinutes()).slice(-2);
        var seconds = ("0" + date.getSeconds()).slice(-2);
        var formattedDate = dayOfWeek + ', ' + day + "-" + month + "-" + year + " " + ', ' + hours + ":" + minutes + ":" + seconds;
        return formattedDate;
    }
    </script>
}
